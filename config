bindsym Print exec maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Shift+Print exec maim -s | xclip -selection clipboard -t image/png
#bindsym Shift+Ctrl+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png

# Rotates the screen upside down at the start of the session
exec xrandr -o inverted

# Enables a prompt to enter sudo password when starting a program that requires sudo privileges
exec --no-startup-id /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1

# Program shortcuts:
# Browser
